@model Domain.Entities.Packs
<div class="well">
    <h3>
        <string>@Model.Name</string>
        <span class="pull-right label label-primary">@Model.Waga.ToString() </span>


    </h3>
   
    @using (Html.BeginForm("AddtoCart", "CarriageCart"))
    {
        <div class="pull-right">
             @Html.HiddenFor(x => x.PacksID)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Dodaj do koszyka z paczkami"/>
       </div>
    }
       





</div>
